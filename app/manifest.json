{
  "applications": {
    "gecko": {
      "id": "link-poster@example.com"
    }
  },
  "name": "__MSG_appName__",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": false
  },
  "browser_action": {
    "default_icon": {
      "38": "images/icon-128.png"
    }
  },
  "permissions": [
    "contextMenus",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}